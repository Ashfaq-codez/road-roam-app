{
  "compilerOptions": {
    // --- Project Setup ---
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "useDefineForClassFields": true,
    "skipLibCheck": true,

    // --- Module Resolution (Crucial for Vite/Bun) ---
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite handles emission

    // --- React/JSX ---
    "jsx": "react-jsx",
    
    // --- Type Safety & Linting ---
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // --- Environment Types ---
    // This allows TypeScript to find types for fetch, Worker environment, and Vite
    "types": ["vite/client", "google.maps"] 
  },
  
  // Define what files to include for compilation/checking
  "include": ["src"]
  
  // NOTE: The 'references' block has been permanently removed to fix the build error.
}